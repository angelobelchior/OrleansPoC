<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:OrleansPoC.UI.ViewModels"
             xmlns:models="clr-namespace:OrleansPoC.UI.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OrleansPoC.UI.Views.MainView"
             x:DataType="vm:MainViewModel"
             Padding="20">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="40,40,*,50">

        <TextBox Grid.Row="0"
                 Margin="5"
                 Watermark="API Endpoint"
                 HorizontalAlignment="Stretch"
                 Text="{Binding Endpoint}" />

        <TextBox Grid.Row="1"
                 Margin="5"
                 Watermark="Name"
                 HorizontalAlignment="Stretch"
                 Text="{Binding Name}" />

        <ListBox Grid.Row="2"
                 Margin="5"
                 HorizontalAlignment="Stretch"
                 ItemsSource="{Binding Stocks}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel x:DataType="models:StockItem">
                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="3"
                Margin="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Send"
                Command="{Binding SendCommand}" />
    </Grid>
</UserControl>