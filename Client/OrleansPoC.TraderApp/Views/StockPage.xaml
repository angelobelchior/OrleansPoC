<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:OrleansPoC.TraderApp.ViewModels"
             xmlns:models="clr-namespace:OrleansPoC.TraderApp.Models"
             x:Class="OrleansPoC.TraderApp.Views.StockPage"
             x:DataType="viewModels:StockViewModel"
             Padding="20">
    
    <VerticalStackLayout>
        <ListView ItemsSource="{Binding Items}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid ColumnDefinitions="*,*,5" Padding="10" x:DataType="models:Stock">
                            <Label Grid.Column="0" Text="{Binding Name}" FontSize="20" VerticalOptions="Center" />
                            <Label Grid.Column="1" Text="{Binding Value, StringFormat='{0:F4}'}" FontSize="20" VerticalOptions="Center"/>
                            <Label Grid.Column="2" Text="{Binding VariationIcon}" FontSize="20" VerticalOptions="Center"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>



</ContentPage>